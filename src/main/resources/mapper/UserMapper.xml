<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">
    <select id="selectOne" resultType="entity.UserEntity">
        select *
        from user
        where user_id = #{id}
    </select>

    <select id="selectAll" resultType="entity.UserEntity">
        select *
        from user
    </select>

    <insert id="save">
        insert into user (password,
                          username,
                          telephone,
                          email,
                          role,
                          last_login_time,
                          specialty,
                          office,
                          qiniu_id,
                          type)
        values (#{password},
                #{username},
                #{telephone},
                #{email},
                #{role},
                #{last_login_time},
                #{specialty},
                #{office},
                #{qiniu_id},
                #{type});
    </insert>

    <update id="update">
        update user
        set username        = #{username},
            qiniu_id        = #{qiniuId},
            password        = #{password},
            telephone       = #{telephone},
            email           = #{email},
            role            = #{role},
            last_login_time = #{lastLoginTime},
            specialty       = #{specialty},
            office          = #{office},
            type            = #{type}
        where user_id = #{userId}
    </update>

    <delete id="delete">
        delete
        from user
        where user_id = #{id}
    </delete>

    <select id="selectUserDTO" resultMap="userDTO">
        select user_id    as userId,
               u.username as username,
               telephone  as telephone,
               email      as email,
               office     as office,
               specialty  as specialty,
               type       as type,
               q.qiniu_id as qiniuId,
               bucket     as bucket
        from user u,
             qiniu q
        where u.user_id = #{id}
          and q.qiniu_id = u.qiniu_id
    </select>

    <resultMap id="userDTO" type="dto.UserDTO">
        <id column="userId" property="userId"/>
        <result column="username" property="username"/>
        <result column="telephone" property="telephone"/>
        <result column="email" property="email"/>
        <result column="office" property="office"/>
        <result column="specialty" property="specialty"/>
        <result column="type" property="type"/>
        <result column="qiniuId" property="qiniuId"/>
        <result column="bucket" property="bucket"/>
    </resultMap>

</mapper>